</div>
    <div id="page" class="container-fluid pt-5 mt-0">
        <div id="page-content" class="row">
            <div id="region-main-box" class="col-12">
                <section id="region-main" class="col-12 h-100" aria-label="{{#str}}content{{/str}}">
                <div class="login-wrapper">

                    <div class="login-container">
                    {{{ output.main_content }}}
                    </div>
                </div>
                </section>
            </div>
        </div>
		<div class="customloginlogin-container text-center">
      <h1 class="card-title">Welcome back</h1>
      <p class="card-text">Steam Education Tool and Kit Store</p>
      <div class="recent-loginsec">
    <div class="recent-heading"><h4>Recent Logins</h4></div>
    <div class="recent-logins">
        <div class="recent-login">
            <img src="{{ pix 'theme' 'profile.png' }}" alt="User">
            <p>Zain Sajid</p>
        </div>
        
        <div class="recent-login">
            <img src="{{ pix 'theme' 'woman.png' }}" alt="User">
            <p>Moby Weiss</p>
        </div>
        <div class="recent-login add-account">
            <p>+</p>
            <p>Add Account</p>
        </div>
        <div class="signup-help ">
